<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.webmanagement.faceformers.Step2Activity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/makerImageView"
        android:layout_width="fill_parent"
        android:layout_height="330dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/step2"
        android:layout_below="@+id/makerImageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/cameraImageView"
        android:layout_width="145dp"
        android:layout_height="140dp"
        android:layout_alignBottom="@+id/makerImageView"
        android:layout_alignRight="@+id/makerImageView"
        android:layout_alignEnd="@+id/makerImageView"
        android:layout_marginBottom="136dp"
        android:visibility="invisible" />

</RelativeLayout>
